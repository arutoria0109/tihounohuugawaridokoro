<%= flash[:notice] %>
<div class ="container">
  <div class ="row">
    <div class ="col-lg-12">


 <h1 class= "pt-4">会員一覧</h1>

  <table class="tableM">
    <thead>
    <tr>
      <th>会員ID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th></th>
      <th></th>
    </tr>
   </thead>
    <% @members.each do |member| %>
   <tbody>
     <tr>
       <td><%= member.id %></th>
       <td><%= link_to admin_member_path(member.id) do %>
           <%= member.name %>
           <% end %>
       </td>
       <td><%= member.email %></th>
       <td>退会ステータス</th>
        <% if member.is_valid %>
          <td>有効</td>
        <% else %>
          <td>退会済</td>
        <% end %>
     </tr>
   </tbody>
    <% end %>
  </table>

      </div>
  </div>
</div>