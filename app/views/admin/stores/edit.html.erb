<div class="container">
  <div class="row">
<div class="mx-auto" style="width: 500px;">
  <h1>投稿編集</h1>

<%= form_with model: @store, url: admin_store_path do |f| %>

<table class="tableedit">
  <tr>
<th>
  <%= f.label :image, "お店のイメージ" %>
</th>
<td>
<%= f.file_field :image, accept: "image/*" %></br>
※画像必須
</td>
</tr>

<tr>
  <th>
  カテゴリ
  </th>
  <td>
    <%= @store.parent.name %>,<%= @store.children.name %>,<%= @store.grandchildren.name %>
  </td>
</tr>

<tr>
  <th>
<%= f.label :shop, "店名" %>
  </th>
<td>
<%= f.text_field :shop, class: 'form-control' %>
</td>
</tr>

<tr>
  <th>
<%= f.label :description, "説明文" %>
  </th>
<td>
<%= f.text_area :description, class: 'form-control' %>
</td>
</tr>

<tr>
  <th>
<%= f.label :nearest_station, "最寄り駅" %>
  </th>
<td>
<%= f.text_field :nearest_station, class: 'form-control' %>
</td>
</tr>
</table>

<label>タグ(,で区切ると複数タグ登録できます)</label>
<%= f.text_field :name,value: @tag_list, class: 'form-control' %>
<%= f.submit '変更を保存', class: "btn btn-success" %>
</div>
<% end %>
</div>
</div>
</div>