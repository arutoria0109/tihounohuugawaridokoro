<%= render "member/search", category_parent_array: @category_parent_array %>
<table class= "table table-hover table-inverse mx-auto my-3">
 <tr class="p-3 mb-2 text-dark" style="background:pink">
  <th>投稿ID</th>
  <th>〇〇地方, 都道府県, カテゴリ</th>
  <th>店舗名</th>
  <th>説明文</th>
  <th>最寄り駅</th>
  <th>コメント</th>
  <th>いいね数</th>
 </tr>

 <% @stores.each do |store| %>

 <tr>
   <td><%= store.id %></td>
    <td><%= store.parent.name %>,<%= store.children.name %>,<%= store.grandchildren.name %></td>
   <td><%= link_to store.name, admin_store_path(store.id), class: "text-dark" %></td>
   <td><%= store.description %></td>
   <td><%= store.nearest_station %></td>
   <td><%= link_to "#{store.comments.count} コメント", admin_store_path(store.id), class: "text-dark" %></td>
    <td>♥<%= store.like_lists.count %> いいね</td>


 </tr>
 <% end %>
 </table>

