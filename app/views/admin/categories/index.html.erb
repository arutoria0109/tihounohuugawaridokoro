<h1>カテゴリ一覧・追加</h1>

<table class="table">
  <tr>
    <%= form_with model: @category, url: admin_categories_path, method: :post, local: true do |f| %>
    <%= f.label :name, "カテゴリー名" %>
    <%= f.text_field :name %>
    <%= f.submit '登録', class: 'btn btn-sm btn-success' %>
    <% end %>
  </tr>
</table>

<table class="table">

 <thead>
  <tr>
    <th>カテゴリー一覧</th>
    <th></th>
  </tr>
 </thead>

 <tbody>
   <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to '編集する', edit_admin_category_path(category), class: 'btn btn-sm btn-success' %></td>
    </tr>
   <% end %>
 </tbody>
</table>
