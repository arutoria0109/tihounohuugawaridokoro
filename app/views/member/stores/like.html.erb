<table class= "table table-hover table-inverse mx-auto my-3">
 <tr class="p-3 mb-2 text-dark" style="background:lightgreen">
  <th>投稿ID</th>
  <th>〇〇地方</th>
  <th>都道府県</th>
  <th>カテゴリ</th>
  <th>店舗名</th>
  <th>説明文</th>
  <th>最寄り駅</th>
  <th>コメント</th>
  <th>いいね数</th>
 </tr>


<% @liked_stores.each do |store| %>
 <tr>
   <td><%= store.id %></td>
   <% store.store_categories.each do |category| %>
   <td><%= category.category.name %></td>
   <% end %>
   <td><%= link_to store.name, store_path(store.id), class: "text-dark text-border" %></td>
   <td><%= store.description %></td>
   <td><%= store.nearest_station %></td>
   <td><%= link_to "#{store.comments.count} コメント", store_path(store.id), class: "text-dark" %></td>
   <% if store.like_listed_by?(current_member) %>
    <td class="text-info">
        ♥<%= store.like_lists.count %> いいね
    </td>
  <% end %>

 </tr>
 <% end %>
 </table>

