<table class= "table table-hover table-inverse mx-auto my-3">
 <tr class="p-3 mb-2 text-dark" style="background:pink">
  <th>投稿ID</th>
  <th>カテゴリ</th>
  <th></th>
  <th></th>
  <th>店舗名</th>
  <th>説明文</th>
  <th>最寄り駅</th>
  <th>コメント</th>
 </tr>

 <% @stores.each do |store| %>

 <tr>
   <td><%= store.id %></td>
   <% store.store_categories.each do |category| %>
   <td><%= category.category.name %></td>
   <% end %>
   <%=link_to member_stores_path(store.id) do %>
   <td><%= store.name %></td>
   <% end %>
   <td><%= store.description %></td>
   <td><%= store.nearest_station %></td>
   <td><%= link_to "#{store.comments.count} コメント", member_store_path(store.id) %></td>

 </tr>
 <% end %>
 </table>
