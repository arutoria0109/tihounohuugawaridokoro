
<%= form_with model: @member, url: member_session_path, local: true do |f| %>

<div class="container">
  <div class-"row">
    <div class="mx-auto mt-5" style="width: 500px;">
      
      <h2 class="m-3">会員ログイン画面</h2>

<table class="tableedit">
  <tr>
    <th>
    <%= f.label :"メールアドレス" %><br />
    </th>
    <td>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </td>
  </tr>
  </div>

<tr>
    <th>
          <%= f.label :"パスワード" %><br />
          </th>
          <td>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "6文字以上で入力" %>
          </td>
  </tr>

  <% if devise_mapping.rememberable? %>
  
 <tr>
   <td>
            <%= f.check_box :remember_me %>
            
      <%= f.label :"パスワードを記録する" %>
            </td>
  </tr>
  <% end %>

<tr>
    <th>
          <%= f.submit "ログイン" %>
    </th>

  </tr>
<% end %>
<tr>
    <th>
<%= render "member/shared/links" %>
    </th>

  </tr>

</table>
</div>
</div>